<!doctype html>

<html lang="{{ request.locale.iso_code }}" dir="{% render 'direction' %}">
  <head>
<style>
  .spiral {
    color: #B6F7FF !important;
    font-size: 1.25em !important;
    padding-right: 3px;
  }
</style>

<script>
(function() {
  // Track if we've already processed nodes
  const processedNodes = new WeakSet();
  
  function replaceAllSpirals() {
    // Use TreeWalker to find ALL text nodes
    const walker = document.createTreeWalker(
      document.body,
      NodeFilter.SHOW_TEXT,
      {
        acceptNode: function(node) {
          // Skip if already processed
          if (processedNodes.has(node)) {
            return NodeFilter.FILTER_REJECT;
          }
          
          // Skip script and style tags
          const parent = node.parentElement;
          if (!parent || parent.tagName === 'SCRIPT' || parent.tagName === 'STYLE') {
            return NodeFilter.FILTER_REJECT;
          }
          
          // Skip if parent already has .spiral class (already processed)
          if (parent.classList && parent.classList.contains('spiral')) {
            return NodeFilter.FILTER_REJECT;
          }
          
          // Only process nodes with the spiral
          if (node.nodeValue && node.nodeValue.trim() === '꩜') {
            return NodeFilter.FILTER_ACCEPT;
          }
          
          return NodeFilter.FILTER_REJECT;
        }
      }
    );

    const nodesToProcess = [];
    let node;
    
    // Collect all text nodes with spirals
    while (node = walker.nextNode()) {
      nodesToProcess.push(node);
    }

    console.log('Found ' + nodesToProcess.length + ' new spirals to process');

    // Replace spirals in each text node
    nodesToProcess.forEach(function(textNode) {
      if (textNode.nodeValue.trim() === '꩜' && !processedNodes.has(textNode)) {
        const span = document.createElement('span');
        span.className = 'spiral';
        span.textContent = '꩜';
        
        // Mark as processed
        processedNodes.add(textNode);
        processedNodes.add(span.firstChild);
        
        // Replace the text node
        textNode.parentNode.replaceChild(span, textNode);
      }
    });
  }

  // Run only once on load
  let hasRun = false;
  
  function runOnce() {
    if (!hasRun) {
      replaceAllSpirals();
      hasRun = true;
    }
  }

  // Run when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', runOnce);
  } else {
    runOnce();
  }

  // Watch for new content being added (like in drawers, modals)
  const observer = new MutationObserver(function(mutations) {
    let shouldReplace = false;
    
    mutations.forEach(function(mutation) {
      mutation.addedNodes.forEach(function(node) {
        if (node.nodeType === 1) { // Element node
          // Check if it contains spiral and isn't already wrapped
          const text = node.textContent || '';
          if (text.includes('꩜') && !node.querySelector('.spiral')) {
            shouldReplace = true;
          }
        }
      });
    });
    
    if (shouldReplace) {
      setTimeout(replaceAllSpirals, 100);
    }
  });

  // Start observing after initial run
  setTimeout(function() {
    if (document.body) {
      observer.observe(document.body, {
        childList: true,
        subtree: true
      });
    }
  }, 1000);

  // For drawer/sidebar openings
  document.addEventListener('click', function(e) {
    if (e.target.matches('[aria-controls], [data-drawer-toggle], button')) {
      setTimeout(replaceAllSpirals, 300);
    }
  });

})();
</script>
