{% comment %}
  Announcement Bar Section with customization options
{% endcomment %}

<style>
  .announcement-bar-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.font_size }}px;
    font-family: {{ section.settings.font_family }};
    text-align: center;
    padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
    position: relative;
    overflow: hidden;
  }

  .announcement-bar-{{ section.id }} .announcement-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .announcement-bar-{{ section.id }} a {
    color: {{ section.settings.link_color }};
    text-decoration: underline;
  }

  .announcement-bar-{{ section.id }} a:hover {
    opacity: 0.8;
  }
</style>

<div class="announcement-bar-{{ section.id }}">
  <div class="announcement-content">
    {% if section.settings.show_icon and section.settings.icon != blank %}
      <span>{{ section.settings.icon }}</span>
    {% endif %}
    
    <div class="announcement-text">
      {{ section.settings.announcement_text }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "<p>Welcome to our store! Free shipping on orders over $50</p>"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show Icon",
      "default": false
    },
    {
      "type": "text",
      "id": "icon",
      "label": "Icon (emoji or HTML)",
      "default": "ðŸŽ‰",
      "info": "Add an emoji or HTML icon"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font Size",
      "default": 14
    },
    {
      "type": "select",
      "id": "font_family",
      "label": "Font Family",
      "options": [
        {
          "value": "Arial, sans-serif",
          "label": "Arial"
        },
        {
          "value": "Helvetica, sans-serif",
          "label": "Helvetica"
        },
        {
          "value": "Georgia, serif",
          "label": "Georgia"
        },
        {
          "value": "Verdana, sans-serif",
          "label": "Verdana"
        }
      ],
      "default": "Arial, sans-serif"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}